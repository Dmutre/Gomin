{
  "name": "auth",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/auth/src",
  "projectType": "application",
  "tags": [],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "webpack-cli build",
        "args": ["--node-env=production"],
        "cwd": "apps/auth"
      },
      "configurations": {
        "development": {
          "args": ["--node-env=development"]
        }
      }
    },
    "serve": {
      "continuous": true,
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "dependsOn": ["build"],
      "options": {
        "buildTarget": "auth:build",
        "runBuildTargetDependencies": false
      },
      "configurations": {
        "development": {
          "buildTarget": "auth:build:development"
        },
        "production": {
          "buildTarget": "auth:build:production"
        }
      }
    },
    "start": {
      "executor": "nx:run-commands",
      "dependsOn": ["build"],
      "options": {
        "command": "node -r dotenv/config dist/apps/auth/main.js dotenv_config_path=apps/auth/.env"
      }
    },
    "test": {
      "options": {
        "passWithNoTests": true
      }
    },
    "db:migrate:make": {
      "executor": "nx:run-commands",
      "options": {
        "command": "knex migrate:make --knexfile apps/auth/knexfile.ts {args.name}",
        "cwd": "."
      }
    },
    "db:migrate:latest": {
      "executor": "nx:run-commands",
      "options": {
        "command": "knex migrate:latest --knexfile apps/auth/knexfile.ts",
        "cwd": "."
      }
    },
    "db:migrate:rollback": {
      "executor": "nx:run-commands",
      "options": {
        "command": "knex migrate:rollback --knexfile apps/auth/knexfile.ts",
        "cwd": "."
      }
    },
    "db:migrate:status": {
      "executor": "nx:run-commands",
      "options": {
        "command": "knex migrate:status --knexfile apps/auth/knexfile.ts",
        "cwd": "."
      }
    },
    "db:seed:make": {
      "executor": "nx:run-commands",
      "options": {
        "command": "knex seed:make --knexfile apps/auth/knexfile.ts {args.name}",
        "cwd": "."
      }
    },
    "db:seed:run": {
      "executor": "nx:run-commands",
      "options": {
        "command": "knex seed:run --knexfile apps/auth/knexfile.ts",
        "cwd": "."
      }
    }
  }
}
